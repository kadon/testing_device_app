%header
  .navbar-inner
    .container
      %a{:class => "btn btn-navbar", "data-target" => ".nav-collapse", "data-toggle" => "collapse" }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a#logo.brand{:href =>"#"}
      = link_to t('application.name'), '#', id: "title"
      %nav
        %ul.nav
          %li.divider-vertical
          %li= link_to t('menu.primary.home'), "#"
          %li.divider-vertical
          %li= link_to t('menu.primary.help'), "#"
          %li.divider-vertical
          %li.dropdown
            %a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown" }
              = t('menu.primary.sig_in')
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Action1", "#"
              %li= link_to "Action2", "#"
              %li.divider
              %li= link_to "Action3", "#"
          %li.divider-vertical
      .btn-group.pull-right
        %a.user.btn.dropdown-toggle{:"data-toggle" => "dropdown"}
          %i.icon-user
          -if user_signed_in?
            = current_user.email
          -else
            = "guesst"
          %span.caret
        %ul.dropdown-menu
          %li
            -if user_signed_in?
              = link_to t("devise.login.sign_out"), destroy_user_session_path, :method => :delete
            -else
              = link_to t("devise.login.sign_in"), new_user_session_path

